{
  "version": "0.2.0",
  "configurations": [
    // * -------------------------------------------------------------------------- * //
    // * PROJECT-SPECIFIC * //
    // Introduce any project-specific debug configurations here.
    // Be sure to say override this file in the Copier questionnaire to keep changes.

    {
      "name": "auto",
      "type": "auto-debug",
      "request": "launch",
      "map": {
        "*.py": "Python: Current file, not just my code, stop on entry",
        "*.ps1": "pwsh",
        "*": "C++"
      }
    },
    {
      "name": "Python: Current file, not just my code, stop on entry",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "stopOnEntry": true,
      "justMyCode": true
    },
    {
      "name": "pwsh",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "cwd": "${file}"
    },
    {
      "name": "C++",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/.venv/bin/python",
      "processId": "${command:pickProcess}",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },

    // * -------------------------------------------------------------------------- * //
    // * GENERAL * //
    {
      "name": "Python: Current file",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole"
    },
    {
      "name": "Python: Current file, not just my code",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "justMyCode": false,
      "console": "internalConsole"
    }
  ]
}
